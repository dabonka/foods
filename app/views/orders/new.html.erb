<%= semantic_form_for @order do |f| %>

  <%= f.inputs do %>
    <%= f.input :item_ids, as: :select, collection: Item.where(day_order: Date.today, course: "First") %>
    <%= f.input :item_ids, as: :select, collection: Item.where(day_order: Date.today, course: "Second") %>
    <%= f.input :item_ids, as: :select, collection: Item.where(day_order: Date.today, course: "Third") %>
  <% end %>

  <%= f.actions do %>
      <%= f.action :submit, :as => :button %>    
  <% end %>

<% end %>

