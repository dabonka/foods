<%= semantic_form_for @order do |f| %>

  <%= f.inputs do %>
    <%= f.input :first_course, as: :check_boxes, collection: Item.where(day_order: Date.today, course: "First").map{|item| ["#{image_tag item.avatar.url(:thumb)}#{item.title} — #{item.price} RUB", item.id]}  %>
    <%= f.input :second_course, as: :check_boxes, collection: Item.where(day_order: Date.today, course: "Second").map{|item| ["#{item.title} — #{item.price} RUB", item.id]} %>
    <%= f.input :third_course, as: :check_boxes, collection: Item.where(day_order: Date.today, course: "Third").map{|item| ["#{item.title} — #{item.price} RUB", item.id]} %>

  <% end %>

  <%= f.actions do %>
      <%= f.action :submit, :as => :button %>    
  <% end %>

<% end %>

